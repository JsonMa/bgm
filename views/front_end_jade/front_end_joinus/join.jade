// 集成模板
extends ../front_end_layout
block title
    title 加入我们-重庆伊尔流体设备制造有限公司

// 引入私有的css
block css
    link(rel='stylesheet', href='/css/front_end/front_end_join/join_us.css')

block content
    .banner-container
    .content-container
        .content-title
            h3.title 加入我们   JOIN US
            p.subtitle 首页>>加入我们
        .content-detail
            .content-detail-left
                .detail-title
                    h4 加入我们
                    hr
                .detail-content-contact
                    .detail-top
                        i.fa.fa-users(aria-hidden='true')
                        .detail-top-right
                            p 我们人才理念是：尊重人才、重视人才、留住人才、提升人才。
                            p Respect for talent, attention to talent, retain talent and improve talent.
                    .detail-middle
                        p 以下是各个招聘岗位具体职责与要求，有意者请详阅，并发简历至招聘邮箱：cqyir@vip.163.com
                    .detail-bottom
                        -if(jobData.research && jobData.research.length > 0)
                            p.detail-bottom-title 研发部
                                ul
                                    -for(var i = 0; i < jobData.research.length; i++)
                                        li #{jobData.research[i].jobName}
                                            i.fa.fa-plus.job-switcher(aria-hidden='true', clicked='false')
                                            .job-container
                                                .job-date 发布时间：#{jobData.research[i].formatCreatedTime}
                                                .job-describe 职位描述：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.research[i].jobDescribe}
                                                .job-requirement 职位要求：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.research[i].jobDemand}
                        -if(jobData.marketing && jobData.marketing.length > 0)
                            p.detail-bottom-title 市场部
                                ul
                                    -for(var j = 0; j < jobData.marketing.length; j++)
                                        li #{jobData.marketing[j].jobName}
                                            i.fa.fa-plus.job-switcher(aria-hidden='true', clicked='false')
                                            .job-container
                                                .job-date 发布时间：#{jobData.marketing[j].formatCreatedTime}
                                                .job-describe 职位描述：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.marketing[j].jobDescribe}
                                                .job-requirement 职位要求：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.marketing[j].jobDemand}
                        -if(jobData.production && jobData.production.length > 0)
                            p.detail-bottom-title 生产部
                                ul
                                    -for(var k = 0; k < jobData.production.length; k++)
                                        li #{jobData.production[k].jobName}
                                            i.fa.fa-plus.job-switcher(aria-hidden='true', clicked='false')
                                            .job-container
                                                .job-date 发布时间：#{jobData.production[k].formatCreatedTime}
                                                .job-describe 职位描述：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.production[k].jobDescribe}
                                                .job-requirement 职位要求：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.production[k].jobDemand}
                        -if(jobData.other && jobData.other.length > 0)
                            p.detail-bottom-title 其他部门
                                ul
                                    -for(var l = 0; l < jobData.other.length; l++)
                                        li #{jobData.other[l].jobName}
                                            i.fa.fa-plus.job-switcher(aria-hidden='true', clicked='false')
                                            .job-container
                                                .job-date 发布时间：#{jobData.other[l].formatCreatedTime}
                                                .job-describe 职位描述：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.other[l].jobDescribe}
                                                .job-requirement 职位要求：
                                                    .container(style="margin-left:24px;margin-top:10px") !{jobData.other[l].jobDemand}
                        -if(!jobData.research && !jobData.marketing && !jobData.production && !jobData.other)
                            p.detail-bottom-title 暂无相关的岗位信息
            .content-detail-right
                .about-nav
                    h4  栏目列表
                    ul
                        li
                            a(href="../join") 加入我们
                .hot-recommend
                    h4 热点内容
                    ul
                        -for(var i = 0; i < hotRecommend.length; i++)
                            li
                                a(href="../news/detail?id=#{hotRecommend[i]._id}").title #{hotRecommend[i].title}
                                span.title-date #{hotRecommend[i].formatCreatedTime}

// 引入私有的js
block js
    script(src='/js/front_end/front_end_join/join_us.js')
